{{#if userInSession}}


  <div class="d-flex flex-wrap justify-content-center">
    <div class="bg-light border rounded">
      <h1 class="text-center mt-3">Subjects</h1>

      {{#each subjects}}
      {{#if editDisplay}}
        <div class="position-relative bg-yellow">
          <div class="border rounded position-absolute bg-yellow w-100 px-3 ">
            <form class="d-flex flex-column"action="/subjects/{{this._id}}/edit" method="POST">
            <label for="">Subject:</label>
            <input class="font-weight-bold h4" type="text" name="title" value="{{this.subjectName}}">

            <label for="">Teacher:</label>
            <input type="text" name="content" value="{{this.teacher}}">

            <button class="btn btn-success w-50 mt-2 mb-1 align-self-center" type="submit" >submit changes</button>
            </form>
          </div>
        </div>
      {{/if}}
        <div class="card m-4 border-dark shadow-sm" style="width: 25rem;">
          <div class="card-body">
              <h5 class="card-title">{{this.subjectName}}</h5>
              <p>Teacher: {{this.teacher}}</p>
              <p>Days: {{this.days}}</p>            

              <div class="d-flex justify-content-between">
                <form action="/subjects/{{this._id}}/display-edit" method="POST">
                  <button type="submit" class="btn btn-success">
                    <i class="bi bi-pencil"></i>
                  </button>
                </form>
              
                <form action="/subjects/{{this._id}}/delete" method="POST">
                    <button class="btn btn-outline-danger">
                      <i class="bi bi-trash-fill"></i>
                    </button>
                </form>
              </div>
          </div>
        </div>  
      {{/each}}
      <div class="d-flex justify-content-center mb-3 width-columns">
      
        <form action="/subjects/{{userId}}" method="POST">
          <button class="btn btn-info rounded-pill" type="submit">+</button>
        </form>

      </div>

    </div>
  <link rel="stylesheet" href="/stylesheets/calendar-styles.css" />


