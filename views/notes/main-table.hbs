<div class="d-flex justify-content-center">
  <p>new note</p>
  <form action="/main-table" method="POST">
    <button type="submit">+</button>
  </form>
</div>


<div class="d-flex flex-wrap justify-content-center">
  <div>
    {{#each notes}}
        <div class="card m-4 border-dark" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p>{{this.createdAt}}</p>
                <div class="d-flex">
                    <a href="/drones/{{id}}/edit" class="btn btn-primary">Edit</a>
                    <form action="/drones/{{id}}/delete" method="POST">
                        <button class="btn btn-outline-danger">Delete</button>
                    </form>
                </div>

            </div>
        </div>  
    {{/each}}
    </div>
</div>

