


<div class="d-flex flex-wrap justify-content-center">
  <div class="bg-light border rounded">
    <h1 class="text-center mt-3">To Do</h1>
    
    {{#each notes}}
      {{#ifEqual status 'toDo'}}
      {{.}}
        {{> toDo this}}
      {{/ifEqual}}
    {{/each}}

    <div class="d-flex justify-content-center mb-3">
      <form action="/main-table" method="POST">
        <input type="text" name="status" value="toDo">
        <button class="btn btn-primary rounded-pill" type="submit">+</button>
      </form>
    </div>
  </div>

    <div class="bg-light border rounded">
    <h1 class="text-center mt-3">Do Today</h1>

    
      {{#each notes}}
        {{#ifEqual status 'doToday'}}
          {{> doToday this}}
        {{/ifEqual}}
      {{/each}}
   
    <div class="d-flex justify-content-center mb-3">
      <form action="/main-table" method="POST">
        <input type="text" name="status" value="doToday">
        <button class="btn btn-primary rounded-pill" type="submit">+</button>
      </form>
    </div>
  </div>

</div>

